<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sopt.soptseminar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SoptSeminarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SoptSeminar">
        <activity
            android:name=".presentation.sign.screens.SignInActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".presentation.sign.screens.SignUpActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".presentation.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.github.screens.GithubProfileActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.github.screens.FollowerDetailActivity"
            android:exported="false" />
    </application>

</manifest>